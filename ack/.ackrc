# Always sort the files
--sort-files

# Always color, even if piping to a another program
--color

# Use less as my pager
--pager=less -FRX

# Do not search in some Python directories
--ignore-dir=is:.hypothesis
--ignore-dir=is:.mypy_cache
--ignore-dir=is:.pytest_cache
--ignore-dir=is:.tox
--ignore-dir=.egg-info
--ignore-dir=build
--ignore-dir=dist
--ignore-dir=venv

# Ignore Sublime Text config files
--ignore-file=ext:sublime-project
--ignore-file=ext:sublime-workspace

--ignore-dir=.cache
--ignore-dir=.web_cache
